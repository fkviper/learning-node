<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog">
    <div class="modal-content">
        
        <!-- Modal Header -->
        <div class="modal-header">
            <h4 class="modal-title">User</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
            <form action="/news" method="POST" id="update_news">
                <div class="form-group">
                        <label for="topic-name" >Topic Name</label>
                        <input type="text" id="topic-name-id" name="topic-name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="nick-name" >Nick Name</label>
                    <input type="text" id="nick-name-id" name="nick-name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="description" >Description</label>
                    <input type="text" id="topic-description-id" name="description" class="form-control" required />
                </div>
            </form>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer">                
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="submit" id="final-create-topic-btn" class="btn btn-primary">Create Topic</button>
        </div>
    </div>
    </div>
</div>